# Пример конфигурации Nginx для AgentSmith
# Размести этот файл в /etc/nginx/sites-available/agentsmith
# И создай симлинк: ln -s /etc/nginx/sites-available/agentsmith /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name your-domain.com;  # Замени на свой домен или IP

    client_max_body_size 10M;

    location / {
        proxy_pass http://127.0.0.1:5005;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # Статические файлы можно отдавать напрямую через Nginx
    location /static/ {
        alias /opt/agentsmith/static/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
}

