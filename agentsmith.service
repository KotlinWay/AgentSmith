[Unit]
Description=AgentSmith Flask Application
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/agentsmith
Environment="PATH=/opt/agentsmith/venv/bin"
ExecStart=/opt/agentsmith/venv/bin/gunicorn --config gunicorn_config.py app:app

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

